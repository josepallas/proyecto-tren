<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:title="title">

	<form t:type="Form" class="form-horizontal" t:id="stationForm">
	
	   <t:errors/>
	   
	   	   <div class="form-group">        
	        <t:label for="station" class="col-md-offset-3 col-md-2"/>
	        <div class="col-md-2">
				<t:select t:id="station" model="stationModel" zone="stationZone" encoder="StationEncoder"/>

			</div>	 
			</div>  
	   <t:zone t:id="stationZone">
	   
	   
	   <div class="form-group">        
	        <t:label for="stationName" class="col-md-offset-3 col-md-2"/>
	        <div class="col-md-3">
	            <input t:id="stationName" t:type="TextField"
				       t:validate="required" maxlength="30" />	        </div>
	   </div>
	    
	   <div class="form-group">        
	        <t:label for="city" class="col-md-offset-3 col-md-2"/>
	        <div class="col-md-3">
	            <input t:id="city" t:type="TextField"
				       t:validate="required" maxlength="30" />
	        </div>
	   </div>

	   <div class="form-group">        
	        <t:label for="address" class="col-md-offset-3 col-md-2"/>
	        <div class="col-md-3">
	            <input t:id="address" t:type="TextField"
				       t:validate="required" maxlength="30" />
	        </div>
	   </div>
	   		</t:zone>
	   
	    
	    <div class="form-group">
	    	<div class="col-md-offset-5 col-md-1">
        		<button type="submit" class="btn btn-primary">${message:submit}</button>
        	</div>
        </div>
	    
	</form>
	
</html>