<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
		xmlns:p="tapestry:parameter" 
	t:type="Layout" t:title="title" showTitleInBody="false">

<head>
  <meta charset="utf-8">
  <title>jQuery UI Accordion - Default functionality</title>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
  <link rel="stylesheet" href="/resources/demos/style.css">
  <script>
  $(function() {
    $( "#accordion" ).accordion();
  });
  </script>
</head>
	<t:if test="!travels">	
		<span class="title">
			<br>
			${message:no-travels}
			</br>
		</span>
	<p:else>
	
	<table class="table table-striped table-hover">
		<thead>
			<tr>
			    <th>${message:departTime-label}</th>
			    <th>${message:arrivalTime-label}</th>
			    
			</tr>
		</thead>
		
		<tbody>			
			<tr t:type="Loop" t:source="travels" t:value="travel">
				<td><t:output value="travel.origin.departTime" format="dateFormat"/></td>
				<td><t:output value="travel.destination.arrivalTime" format="dateFormat"/></td>
				<td><a href="#" t:type="PageLink" class="btn btn-primary" t:page="purchase/BuyTickets" t:context="[travel.origin.stopId,travel.destination.stopId,date]">comprar</a></td>
			
			</tr>
		</tbody>
	
	</table>
	</p:else>
	</t:if>

		
</html>	