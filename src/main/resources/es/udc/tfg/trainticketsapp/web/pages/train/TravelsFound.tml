<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
		xmlns:p="tapestry:parameter" 
	t:type="Layout" t:title="title" showTitleInBody="false">
	
	<t:if test="!travels">	
		<span class="title">
			<br>
			${message:no-travels}
			</br>
		</span>
	<p:else>
	
	<table class="table table-striped table-hover">
		<thead>
			<tr>
			    <th>${message:departTime-label}</th>
			    <th>${message:arrivalTime-label}</th>
			    
			</tr>
		</thead>
		
		<tbody>			
			<tr t:type="Loop" t:source="travels" t:value="travel">
				<td><t:output value="travel.origin.departTime" format="dateFormat"/></td>
				<td><t:output value="travel.destination.arrivalTime" format="dateFormat"/></td>
				<td><a href="#" t:type="PageLink" class="btn btn-primary" t:page="purchase/BuyTickets" t:context="[travel.origin.stopId,travel.destination.stopId]">comprar</a></td>
			
			</tr>
		</tbody>
	
	</table>
	</p:else>
	</t:if>

		
</html>	